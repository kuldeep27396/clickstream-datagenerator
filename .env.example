# FastAPI Configuration
APP_NAME="clickstream-datagenerator"
APP_VERSION="1.0.0"
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=${RAILWAY_KAFKA_BOOTSTRAP_SERVERS}
KAFKA_SECURITY_PROTOCOL=${RAILWAY_KAFKA_SECURITY_PROTOCOL:-SASL_SSL}
KAFKA_SASL_MECHANISM=${RAILWAY_KAFKA_SASL_MECHANISM:-SCRAM-SHA-256}
KAFKA_SASL_USERNAME=${RAILWAY_KAFKA_USERNAME}
KAFKA_SASL_PASSWORD=${RAILWAY_KAFKA_PASSWORD}
KAFKA_TOPIC_USERS=users
KAFKA_TOPIC_PRODUCTS=products
KAFKA_TOPIC_INTERACTIONS=interactions
KAFKA_TOPIC_SESSIONS=sessions

# Data Generation Configuration
GENERATION_RATE=100
MAX_USERS=100000
MAX_PRODUCTS=50000
BATCH_SIZE=1000

# Redis Configuration (for session tracking)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0